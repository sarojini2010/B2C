<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#622682">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/relative_1"
        android:layout_marginTop="20dp">
        <!--android:gravity="center_horizontal|center_vertical"-->
      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_marginLeft="30dp"
          android:src="@mipmap/freadom"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREADOM"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:textSize="28dp"
            android:textColor="@color/list_item_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="READY . PLAY . GO!"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="38dp"
            android:textSize="12dp"
            android:textColor="@color/list_item_title"/>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relate_2"
        android:layout_below="@+id/relative_1"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:id="@+id/welcome1"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="120dp"
            android:textColor="@color/list_item_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome1"
            android:id="@+id/text1"
            android:text="We just need to get a few details from you to "
            android:textSize="14sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/list_item_title"
            android:layout_marginLeft="45dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:text="get  you signedup for the service"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/list_item_title"
            android:layout_marginLeft="60dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relate_2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linear1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/user_xxhdpi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:layout_marginTop="18dp"
                android:textColor="@color/list_item_title"/>
            <EditText
                android:layout_width="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linear2"
            android:layout_below="@+id/linear1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/user_xxhdpi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:layout_marginTop="18dp"
                android:textColor="@color/list_item_title"/>
            <EditText
                android:layout_width="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linear3"
            android:layout_below="@+id/linear2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/user_xxhdpi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="20sp"
                android:layout_marginTop="18dp"
                android:textColor="@color/list_item_title"/>
            <EditText
                android:layout_width="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linear4"
            android:layout_below="@+id/linear3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:textColor="@color/gray"/>
            </LinearLayout>

    </RelativeLayout>
</RelativeLayout>